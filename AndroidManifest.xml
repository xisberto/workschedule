<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.xisberto.workschedule"
    android:versionCode="090"
    android:versionName="0.9beta" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.xisberto.workschedule.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.xisberto.workschedule.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="net.xisberto.workschedule.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.xisberto.workschedule.MainActivity" />
        </activity>
        <activity
            android:name="net.xisberto.workschedule.AlarmMessageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:theme="@style/AppTheme.Translucent" >
        </activity>

        <receiver
            android:name="net.xisberto.workschedule.AlarmReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>

        <activity
            android:name="net.xisberto.workschedule.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="net.xisberto.workschedule.SettingsActivity" >
            <intent-filter>
                <action android:name="net.xisberto.workschedule.AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.xisberto.workschedule.SettingsActivity" />
        </activity>
    </application>

</manifest>
